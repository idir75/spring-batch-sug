<?xml version="1.0" encoding="UTF-8"?>
    <!-- Application context definition -->
    <!--  $Id$ -->
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:p="http://www.springframework.org/schema/p" xmlns:util="http://www.springframework.org/schema/util" xmlns:batch="http://www.springframework.org/schema/batch"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
                        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
                        http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd">

    <!-- parent -->
    <batch:job id="jobBean" abstract="true">
        <batch:listeners>
            <batch:listener ref="jobListener" />
        </batch:listeners>
    </batch:job>

    <!-- Job -->
    <batch:job id="jobExemple" restartable="true" parent="jobBean">
        <batch:step id="initialStep">
            <batch:tasklet ref="initializerTasklet" allow-start-if-complete="true">
                <batch:listeners>
                    <batch:listener ref="stepExecutionListener" />
                </batch:listeners>
            </batch:tasklet>
        </batch:step>
    </batch:job>

    <!-- Tasklets -->
    <bean id="initializerTasklet" class="com.renault.eplatform.batch.vo.tasklet.InitializerTasklet" scope="step" />
</beans>
